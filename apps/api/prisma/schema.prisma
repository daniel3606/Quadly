// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String     @id @default(uuid())
  email          String     @unique
  email_verified Boolean    @default(false)
  password_hash  String?
  google_id      String?    @unique
  school         String     @default("UMICH")
  nickname       String
  created_at     DateTime   @default(now())
  updated_at     DateTime   @updatedAt
  status         UserStatus @default(ACTIVE)
  role           UserRole   @default(USER)
  last_active_at DateTime?

  // Relations
  posts       Post[]
  comments    Comment[]
  reviews     Review[]
  schedules   Schedule[]
  reports     Report[]   @relation("Reporter")
  blocks      Block[]    @relation("Blocker")
  blocked_by  Block[]    @relation("Blocked")
  pinned_boards PinnedBoard[]

  @@index([email])
  @@index([status])
}

enum UserStatus {
  ACTIVE
  SUSPENDED
  DELETED
}

enum UserRole {
  USER
  MODERATOR
  ADMIN
}

model Board {
  id         String @id @default(uuid())
  key        String @unique
  name       String
  visibility String @default("school_only")
  anon_mode  String // 'optional', 'forced', 'disabled'

  posts        Post[]
  pinned_by    PinnedBoard[]

  @@index([key])
}

model PinnedBoard {
  id         String   @id @default(uuid())
  user_id    String
  board_id   String
  created_at DateTime @default(now())

  user  User  @relation(fields: [user_id], references: [id], onDelete: Cascade)
  board Board @relation(fields: [board_id], references: [id], onDelete: Cascade)

  @@unique([user_id, board_id])
  @@index([user_id])
  @@index([board_id])
}

model Post {
  id                  String     @id @default(uuid())
  board_id            String
  author_user_id      String
  title               String
  body                String
  is_anonymous        Boolean    @default(false)
  anonymous_handle_id String?
  like_count          Int        @default(0)
  comment_count       Int        @default(0)
  view_count          Int        @default(0)
  hot_score           Float      @default(0)
  status              PostStatus @default(ACTIVE)
  created_at          DateTime   @default(now())
  updated_at          DateTime   @updatedAt

  // Relations
  board    Board      @relation(fields: [board_id], references: [id])
  author   User       @relation(fields: [author_user_id], references: [id])
  comments Comment[]
  likes    PostLike[]
  reports  Report[]

  @@index([board_id])
  @@index([author_user_id])
  @@index([status])
  @@index([hot_score])
  @@index([created_at])
}

enum PostStatus {
  ACTIVE
  HIDDEN
  DELETED
}

model PostLike {
  id         String   @id @default(uuid())
  post_id    String
  user_id    String
  created_at DateTime @default(now())

  post Post @relation(fields: [post_id], references: [id], onDelete: Cascade)

  @@unique([post_id, user_id])
  @@index([post_id])
  @@index([user_id])
}

model Comment {
  id                  String        @id @default(uuid())
  post_id             String
  author_user_id      String
  body                String
  is_anonymous        Boolean       @default(false)
  anonymous_handle_id String?
  status              CommentStatus @default(ACTIVE)
  created_at          DateTime      @default(now())
  updated_at          DateTime      @updatedAt

  // Relations
  post    Post     @relation(fields: [post_id], references: [id], onDelete: Cascade)
  author  User     @relation(fields: [author_user_id], references: [id])
  reports Report[]

  @@index([post_id])
  @@index([author_user_id])
  @@index([status])
}

enum CommentStatus {
  ACTIVE
  HIDDEN
  DELETED
}

model Report {
  id               String           @id @default(uuid())
  reporter_user_id String
  target_type      ReportTargetType
  target_id        String
  reason_code      ReportReasonCode
  description      String?
  status           ReportStatus     @default(OPEN)
  created_at       DateTime         @default(now())
  updated_at       DateTime         @updatedAt

  // Optional foreign keys for polymorphic relations
  post_id    String?
  comment_id String?
  review_id  String?

  // Relations
  reporter User     @relation("Reporter", fields: [reporter_user_id], references: [id])
  post     Post?    @relation(fields: [post_id], references: [id], onDelete: Cascade)
  comment  Comment? @relation(fields: [comment_id], references: [id], onDelete: Cascade)
  review   Review?  @relation(fields: [review_id], references: [id], onDelete: Cascade)

  @@index([reporter_user_id])
  @@index([target_type, target_id])
  @@index([status])
  @@index([post_id])
  @@index([comment_id])
  @@index([review_id])
}

enum ReportTargetType {
  POST
  COMMENT
  REVIEW
  USER
}

enum ReportReasonCode {
  SPAM
  HARASSMENT
  HATE
  SEXUAL
  PRIVACY
  ILLEGAL
  OTHER
}

enum ReportStatus {
  OPEN
  RESOLVED
  REJECTED
}

model Block {
  id              String   @id @default(uuid())
  blocker_user_id String
  blocked_user_id String
  created_at      DateTime @default(now())

  blocker User @relation("Blocker", fields: [blocker_user_id], references: [id])
  blocked User @relation("Blocked", fields: [blocked_user_id], references: [id])

  @@unique([blocker_user_id, blocked_user_id])
  @@index([blocker_user_id])
  @@index([blocked_user_id])
}

model Course {
  id             String       @id @default(uuid())
  school         String       @default("UMICH")
  subject        String
  catalog_number String
  title          String
  credits_min    Int
  credits_max    Int
  term_tags      String[]
  source         CourseSource @default(MANUAL)
  created_at     DateTime     @default(now())
  updated_at     DateTime     @updatedAt

  // Relations
  reviews        Review[]
  schedule_items ScheduleItem[]

  @@unique([school, subject, catalog_number])
  @@index([subject, catalog_number])
  @@index([school])
}

enum CourseSource {
  MANUAL
  API
}

model Review {
  id                  String       @id @default(uuid())
  course_id           String
  author_user_id      String
  rating_overall      Int
  difficulty          Int
  workload            Int
  exams               Int
  attendance_required Boolean
  text_body           String
  status              ReviewStatus @default(ACTIVE)
  created_at          DateTime     @default(now())
  updated_at          DateTime     @updatedAt

  // Relations
  course  Course   @relation(fields: [course_id], references: [id], onDelete: Cascade)
  author  User     @relation(fields: [author_user_id], references: [id])
  reports Report[]

  @@index([course_id])
  @@index([author_user_id])
  @@index([status])
}

enum ReviewStatus {
  ACTIVE
  HIDDEN
  DELETED
}

model Schedule {
  id                   String   @id @default(uuid())
  user_id              String
  name                 String
  total_credits_cached Int      @default(0)
  created_at           DateTime @default(now())
  updated_at           DateTime @updatedAt

  // Relations
  user  User           @relation(fields: [user_id], references: [id], onDelete: Cascade)
  items ScheduleItem[]

  @@index([user_id])
}

model ScheduleItem {
  id           String   @id @default(uuid())
  schedule_id  String
  course_id    String?
  title        String
  day_of_week  Int // 0-6 (Sunday-Saturday)
  start_minute Int // 0-1439
  end_minute   Int // 0-1439
  location     String?
  color        String?
  created_at   DateTime @default(now())
  updated_at   DateTime @updatedAt

  // Relations
  schedule Schedule @relation(fields: [schedule_id], references: [id], onDelete: Cascade)
  course   Course?  @relation(fields: [course_id], references: [id])

  @@index([schedule_id])
  @@index([day_of_week])
}

model EmailVerificationCode {
  id         String   @id @default(uuid())
  email      String
  code       String
  expires_at DateTime
  used       Boolean  @default(false)
  created_at DateTime @default(now())

  @@index([email, code])
  @@index([expires_at])
}

// Course Catalog Models
model CourseCatalogCourse {
  id            String   @id @default(uuid())
  subject_code  String
  course_number String
  title         String
  description   String?  @db.Text
  credit_min    Int?
  credit_max    Int?
  last_seen_term String?
  source_url    String?
  created_at    DateTime @default(now())
  updated_at    DateTime @updatedAt

  // Relations
  tags          CourseCatalogTag[]
  prerequisites CoursePrerequisite[]

  @@unique([subject_code, course_number])
  @@index([subject_code])
  @@index([subject_code, course_number])
  @@index([last_seen_term])
}

model CourseCatalogTag {
  id         String   @id @default(uuid())
  course_id  String
  tag_type   String   // 'requirement_grouping', 'department', 'level', etc.
  tag_value  String
  created_at DateTime @default(now())

  course CourseCatalogCourse @relation(fields: [course_id], references: [id], onDelete: Cascade)

  @@index([course_id])
  @@index([tag_type, tag_value])
}

model CoursePrerequisite {
  id           String   @id @default(uuid())
  course_id    String
  raw_text     String   @db.Text
  parsed_json  Json?    // Structured prerequisite data
  confidence   Float    @default(0.0) // 0.0 to 1.0
  created_at   DateTime @default(now())
  updated_at   DateTime @updatedAt

  course CourseCatalogCourse @relation(fields: [course_id], references: [id], onDelete: Cascade)

  @@index([course_id])
}

enum CrawlJobStatus {
  PENDING
  RUNNING
  COMPLETED
  FAILED
  CANCELLED
}

model CrawlJob {
  id            String          @id @default(uuid())
  status        CrawlJobStatus  @default(PENDING)
  term          String?
  subject       String?
  query         String?
  started_at    DateTime?
  finished_at   DateTime?
  params        Json?           // Additional crawl parameters
  error_log     String?          @db.Text
  pages_fetched Int             @default(0)
  courses_found Int             @default(0)
  courses_saved Int             @default(0)
  created_at    DateTime        @default(now())
  updated_at    DateTime        @updatedAt

  @@index([status])
  @@index([subject, term])
  @@index([created_at])
}
